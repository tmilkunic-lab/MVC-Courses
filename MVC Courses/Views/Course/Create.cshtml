@model MvcCourses.Models.Course
@{
    ViewData["Title"] = "Create Course";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Credits" class="form-label"></label>
        <input asp-for="Credits" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <select asp-for="Department"
                asp-items="Html.GetEnumSelectList<MvcCourses.Models.Department>()"
                class="form-select">
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsOnline" class="form-check-input" />
        <label asp-for="IsOnline" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
